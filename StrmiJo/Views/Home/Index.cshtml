
@model StrmiJo.Model.MostPopularData
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .move-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 1s ease-in-out;
        border-radius: 10px;
        border: 0.2rem solid #757575;
    }

    .move-container {
        width: 380px;
        height: 520px;
        object-fit: cover;
        transition: all 1s ease-in-out;
        padding: 30px;
        max-width: 100%;
        max-height: 100%;
    }

    .col-lg-4 {
        padding: 0px;
    }

    .move-container:hover {
        transform: scale(1.2);
        margin: 5px 5px;
        opacity: 0.5;
    }

    .movie-title {
        padding: 0 10px;
        font-size: 32px;
        font-weight: bold;
        position: absolute;
        top: 10%;
        left: 50px;
        opacity: 0;
        transition: 1s all ease-in-out;
        color: black;
    }

    .move-container:hover .movie-title {
        opacity: 1;
    }
</style>

<body>

    <div class="container">
        <div class="page-title jumbotron">
            <h1>Filmes Polpulares</h1>
            <p>Filmes mais assistidos nas ultimas semanas.</p>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model.Items.Take(9)) {
            <div class="col-lg-4 ">
                <div class="move-container">
                    <img class="move-image" src="@item.Image" onclick="MovieDatail('@item.Id')">
                    <span class="movie-title">@item.Title</span>
                </div>
            </div>
        }
    </div>

</body>

<script>
    function MovieDatail(id) {
        location.href = '@Url.Action("Index", "MovieDetail")?id=' + id;
    }
</script>