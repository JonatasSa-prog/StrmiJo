
@model StrmiJo.Model.MostPopularData
@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        max-width: 100%;
        max-height: 392px;
        min-height: 392px;
        object-fit: cover;
    }
    
    h6 {
        text-align: center;
    }

    .card-header.py-3 {
        height: 71px;
    }

    .card-body {
        width: 100%;
        height: 100%;
        align-self: center;
        padding: 0px !important;
    }
</style>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model.Items)
        {

            <div class="col-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">@item.FullTitle</h6>
                    </div>
                    <div id="img" class="card-body" style="background-image: url('@item.Image');">
                    </div>
                </div>
            </div>

        }
    </div>
</div>

